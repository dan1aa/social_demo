<div class="add_post_wrapper">
    <div class="add_post">
        <form action="/addpost" method="POST">
            <h1 class="add_post_title">ADD POST</h1>
            <label for="add_post_title">Post title</label><input type="text" name="add_post_title" required>
            <label for="add_post_text">Post text</label><textarea name="add_post_text" required></textarea>
            <div class="button_wrapper">
                <button class="add_post_close">Cancel</button>
                <button type="submit" class="submit_post">Confirm</button>
            </div>
        </form>
    </div>
</div>
<div class="add_post_button">
    <img src="./add.png" alt="">
</div>
<div class="container">
    <div class="profile_wrapper">
        <div class="left_bar">
            <div class="avatar_wrapper">
                <hr class="deco_line">
                <h1>{{name}}</h1>
                <img src="./user.png" alt="">
            </div>
            <!-- TEST -->
            <div class="stats_container">
                <div class="stats_title">
                    <div class="top_line"> </div>
                    <div class="text_deco">
                    <span>S</span>tats
                    </div>
                </div>
                <div class="stats_wrapper">
                    <div class="place_wrapper">
                        <img src="./top-three.png" alt="">
                        <div class="top_number">
                            <h2>0</h2>
                        </div>
                        <div class="top_message">
                            <span>TOP</span>
                        </div>
                    </div>
                    <div class="likes_wrapper">
                        <img src="./like.png" alt="">
                        <div class="likes_number">
                            <h2>{{likesCount}}</h2>
                        </div>
                        <div class="likes_message">
                            <span>LIKES</span>
                        </div>
                    </div>
                    <div class="posts_wrapper">
                        <img src="./pizza-slice.png" alt="">
                        <div class="posts_number">
                            <h2>{{pointsCount}}</h2>
                        </div>
                        <div class="posts_message">
                            <span>POINTS</span>
                        </div>
                    </div>
                    <div class="followers_wrapper">
                        <img src="./follower.png" alt="">
                        <div class="followers_number">
                            <h2>0</h2>
                        </div>
                        <div class="followers_message">
                            <span>Followers</span>
                        </div>
                    </div>
                    <div class="down_line"> </div>  
                </div>
                </div>
                <div class="bar_buttons">
                    <form action="/logout" method="GET"><button class="exit_button">Exit</button></form>
                    <button class="slide_button">
                        <img src="./arrow.png" alt="">
                    </button>
                </div>
        </div>
        <div class="user_posts">
            <div class="title_wrapper">
                <div class="your_posts">
                    <span>Your posts</span>
                </div>
                <div class="edit_profile">
                    <span>Edit profile</span>
                </div>
            </div>
            <div class="posts tab_active">
                <div class="wrap">
                    {{#each posts}}
                    <div class="post">
                        <div class="post_text">
                            <h2 class="post_title">{{title}}</h2>
                            {{text}}
                        </div>
                        <div class="post_bottom">
                            <div class="like">
                                <form method="POST" action="/putlike"><img src="./like.png" alt="" /></form>
                                <span class="like_counter">{{postsLikes}}</span>
                            </div>
                            <div class="line_wrapper">
                                <div class="line_one"> </div>
                                <div class="line_two"> </div>
                            </div>
                            <img src="./more.png" alt="" class="more_button" />
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/user.js"></script>